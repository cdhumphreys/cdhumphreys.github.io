---
import {
    PresentationIcon,
    InfoHexagonIcon,
    DownloadIcon,
} from "../components/Icon.astro";
import Profile from "../components/Profile.astro";
import BannerCard from "../components/BannerCard.astro";
---

<section id="banner" class="banner container">
    <div class="banner__inner">
        <Profile />
        <div class="banner__nav">
            <a href="#work" onclick="lenis.scrollTo('#work', {lerp: 0.05})">
                <BannerCard class="card--translucent">
                    <Fragment slot="title">
                        <h3>Work</h3>
                    </Fragment>
                    <Fragment slot="text">
                        <p>Some of the projects I've worked on</p>
                    </Fragment>
                    <Fragment slot="image">
                        <PresentationIcon
                            class="text-primary"
                            width={140}
                            height={140}
                        />
                    </Fragment>
                </BannerCard>
            </a>
            <a href="#about" onclick="lenis.scrollTo('#about', {lerp: 0.05})">
                <BannerCard class="card--translucent">
                    <Fragment slot="title">
                        <h3>About</h3>
                    </Fragment>
                    <Fragment slot="text">
                        <p>Want to know more about me?</p>
                    </Fragment>
                    <Fragment slot="image">
                        <InfoHexagonIcon
                            class="text-primary"
                            width={140}
                            height={140}
                        />
                    </Fragment>
                </BannerCard>
            </a>
            <a
                href="https://docs.google.com/document/d/1JiQitPDvDbyqtQV8P7FgXy-vc7jmG3Kja7cBePOJH6Y/export?format=pdf"
                download
            >
                <BannerCard class="card--translucent">
                    <Fragment slot="title">
                        <h3>CV</h3>
                    </Fragment>
                    <Fragment slot="text">
                        <p>Download a copy of my CV</p>
                    </Fragment>
                    <Fragment slot="image">
                        <DownloadIcon
                            class="text-primary"
                            width={140}
                            height={140}
                        />
                    </Fragment>
                </BannerCard>
            </a>
        </div>
    </div>
</section>
<style is:global>
    .banner {
        padding-block: var(--section-vertical-padding);
        position: relative;

        z-index: 0;

        min-height: 100vh;

        place-content: center;
    }
    .banner__inner {
        display: flex;
        flex-direction: column;
        gap: var(--spacing-60);
        align-items: center;

        @media (min-width: 1024px) {
            gap: var(--spacing-100);
        }
    }

    .banner__nav {
        display: flex;
        flex-direction: column;
        gap: var(--spacing-20);
        width: 100%;

        @media screen and (min-width: 1024px) {
            flex-direction: row;
            gap: var(--spacing-30);
        }
    }

    .banner__nav > a {
        flex: 1 1 100%;
        display: flex;
    }
</style>
